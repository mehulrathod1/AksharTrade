<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.in.akshartrade">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AksharTrade">
        <activity
            android:name=".Activity.WatchListActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.AccountDetailActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".Dialog.CompanyDetailActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:theme="@style/ActivityDialogTheme" />
        <activity
            android:name=".Activity.SignIn"
            android:exported="true" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>